<h1>Portfolio</h1>

<%= link_to("Create new Portfolio Item", new_portfolio_path) %>

<% @portfolio_items.each do |item| %>
  <h3><%= link_to(item.title, portfolio_path(item.id)) %></h3>
  <%= item.thumbnail.nil? ? image_tag("https://via.placeholder.com/300x200") : image_tag(item.thumbnail) %>
  <p><%= item.tagline %></p>
  <p><%= item.body.length >= 150 ? item.body[0, 147] + "..." : item.body %>
    <%= link_to("Read more", portfolio_path(item.id)) %>
  </p>
  <hr/>
<% end %>