<h1>Portfolio</h1>

<%= link_to("Create new Portfolio Item", new_portfolio_path) %>

<% @portfolio_items.each do |item| %>
  <h3><%= item.title %></h3>
  <%= item.thumbnail.nil? ? image_tag("https://via.placeholder.com/300x200") : image_tag(item.thumbnail) %>
  <p><%= item.tagline %></p>
  <p><%= item.body %></p>
  <%= link_to("edit", edit_portfolio_path(item.id)) %>
  <hr/>
<% end %>